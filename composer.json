{
	"name":              "dreamfactory/lib-php-common-platform",
	"description":       "DreamFactory Services Platform(tm) Components Library/SDK for PHP",
	"homepage":          "http://dreamfactorysoftware.github.io",
	"keywords":          ["php5", "framework", "library", "dreamfactory", "dsp"],
	"type":              "library",
	"license":           ["Apache-2.0"],
	"authors":           [
		{
			"name":  "Jerry Ablan",
			"email": "jerryablan@dreamfactory.com",
			"role":  "Lead Developer, server-side/client-side"
		},
		{
			"name":  "Lee Hicks",
			"email": "leehicks@dreamfactory.com",
			"role":  "Lead Developer, server-side/client-side"
		}
	],
	"minimum-stability": "dev",
	"require":           {
		"php":                               ">=5.3.10",
		"kisma/kisma":                       "~0.2@stable",
		"dreamfactory/yii":                  "=1.1.13",
		"dreamfactory/lib-php-common":       "~1.1@stable",
		"dreamfactory/lib-php-common-yii":   "~1.1@stable",
		"dreamfactory/oasys":                "~0.4@stable",
		"dreamfactory/javascript-sdk":       "1.*",
		"swiftmailer/swiftmailer":           "4.3.*",
		"aws/aws-sdk-php":                   "2.4.*",
		"rackspace/php-opencloud":           "1.5.*",
		"dready92/php-on-couch":             "dev-master",
		"phpforce/soap-client":              "dev-master",
		"pear-pear.php.net/Net_URL2":        "*",
		"pear-pear.php.net/HTTP_Request2":   "*",
		"pear-pear.php.net/Mail_mimeDecode": "*",
		"pear-pear.php.net/Mail_Mime":       "*",
		"dreamfactory/azure-sdk-for-php":    ">=0.4.0@stable"
	},
	"require-dev":       {
		"phpunit/phpunit":          "~3.7@stable",
		"phpunit/phpunit-selenium": "@stable",
		"phpunit/phpunit-story":    "@stable",
		"phpunit/php-invoker":      "@stable",
		"phpunit/dbunit":           "@stable"
	},
	"repositories":      [
		{
			"type": "pear",
			"url":  "http://pear.php.net"
		}
	],
	"autoload":          {
		"psr-0": {
			"DreamFactory\\Platform\\": ""
		}
	},
	"target-dir":        "DreamFactory/Platform",
	"extra":             {
		"branch-alias": {
			"dev-develop": "1.4.x-dev"
		}
	}
}
